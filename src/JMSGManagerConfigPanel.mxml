<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="318" height="110" title="选择配置">
	
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			public static const Event_DBChoose:String = "databasechoose";
			private var dbType:int = 0;
			
			protected function btnOk_clickHandler(event:MouseEvent):void
			{
				dbType = int(serverSelect.selectedItem["type"]);
				
				var _loader:URLLoader = new URLLoader();  
				var _url:URLRequest = new URLRequest("http://172.26.72.1/DataEditor/InitPhpSettings.php"); 
				
				var param:URLVariables = new URLVariables(); 
				param.db = dbType; 
				_url.data = param ; 
				_url.method = URLRequestMethod.POST;
				
				_loader.addEventListener(Event.COMPLETE, loaded);  
				_loader.load(_url);  
				btnOk.enabled = false;
			}
			
			private function loaded(evt:Event):void  
			{  
				PopUpManager.removePopUp(this);
				this.dispatchEvent(new DataEvent(Event_DBChoose,false,false,dbType.toString()));				
			} 
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Group horizontalCenter="0" verticalCenter="0">
		
		<s:VGroup horizontalAlign="center" gap="10">
			<s:HGroup verticalAlign="middle">
				<s:Label text="选择数据库类型" />
				<s:ComboBox id="serverSelect" width="150" dataProvider="{DBConfigs.allSpecialTypes}" labelField="desc" selectedIndex="0" />
			</s:HGroup>
			<s:Button label="OK" id="btnOk" click="btnOk_clickHandler(event)" />
		</s:VGroup>
	</s:Group>
	
</s:Panel>
